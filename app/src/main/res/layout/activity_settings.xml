<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_grey"
    tools:context=".actionbar.SettingsActivity">

    <Button
        android:id="@+id/but_profile_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:letterSpacing="0.015"
        android:paddingVertical="10dp"
        android:text="Изменить профиль"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_callback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:letterSpacing="0.015"
        android:paddingVertical="10dp"
        android:text="Связь с модератором"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but_profile_settings" />

    <Button
        android:id="@+id/but_app_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:letterSpacing="0.015"
        android:paddingVertical="10dp"
        android:text="Настройки приложения"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but_callback" />

    <Button
        android:id="@+id/but_exit_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:letterSpacing="0.015"
        android:paddingVertical="10dp"
        android:text="Выход"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but_app_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>